<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900">
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a href="/">back to home</a>
        <h1 class="text-3xl tracking-tighter mt-10 mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% users.forEach(function(user){ %>
                <div class="user w-70 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-600 overflow-hidden">
                        <img class=" w-full h-full object-cover"src="<%= user.image%>" alt="">
                    </div>
                    <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %> </h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-600" href="/edit/<%= user._id %>">Edit user</a>
                        <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
                    </div>
                    </div>
            <% }) %>
        </div>
    </div>
</body>
</html>